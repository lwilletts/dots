# ~/.cwmrc

# binds
unbind-key all

bind-key 4S-r restart

bind-key M-Tab window-cycle
bind-key MS-Tab window-rcycle
bind-key M-n window-cycle-ingroup
bind-key M-p window-rcycle-ingroup
bind-key M-m window-maximize
bind-key M-a window-vmaximize

bind-key M-s menu-window
bind-key M-g window-menu-label

bind-mouse M-1 window-move
unbind-mouse M-2
bind-mouse M-3 window-resize
bind-mouse M-4 window-raise
bind-mouse M-5 window-lower

# ignores
ignore Discord
ignore Steam
ignore Popup

# style
borderwidth 1
fontname "nu:pixelsize=12"
gap 40 20 20 20 # T, B, L, R

# colors
color font "#040404"
color menufg "#040404"
color menubg "#D7D7D7"
color selfont "#D7D7D7"
color activeborder "#D7D7D7"
color urgencyborder "#C0392B"
color inactiveborder "#484b52"

# app menu
command " urxvt "        "urxvtc -e zsh"
command " pulsemixer "   "urxvtc -e pulsemixer"
command " bluetoothctl " "urxvtc -e bluetoothctl"
command " firefox "      "firefox"
command " discord "      "sh -c 'discord'"
command " lutris "       "lutris"
command " steam "        "steam"
command " obs-studio "   "obs"
command " telegram "     "telegram-desktop"
command " pizero "       "urxvtc -e sh -c 'mosh pizero'"
command " remote "       "urxvtc -e sh -c 'mosh remote'"
