# ~/.cwmrc

# binds
unbind-key all
unbind-mouse all

bind-key 4S-q quit
bind-key 4S-r restart

bind-key MS-q window-close

# style
sticky no
borderwidth 0
gap 0 50 0 30
fontname 'scientifica:pixelsize=11'

# colors
color font "#171717"
color menubg "#D9EAE2"
color menufg "#171717"
color activeborder "#D9EAE2"
color urgencyborder "#B23450"
color inactiveborder "#171717"
