#!/bin/sh
#
# bat

BAT="/sys/class/power_supply/BAT0"
test -d "$BAT" || return 0

CHR="$(cat "$BAT/charge_now")"
MAX="$(cat "$BAT/charge_full")"
STATUS="$(cat "$BAT/status")"
PERCENT="$(printf '%.2f\n' "$(echo "$CHR/$MAX*100" | bc -l)")"

test "$STATUS" = "Charging" && {
    printf '%s\n' "$PERCENT% [CHARGING]"
} || {
    printf '%s\n' "$PERCENT%"
}
