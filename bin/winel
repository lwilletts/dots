#!/bin/sh
#
# winel

usage() {
    base=$(basename "$0")

    cat >&2 << EOF
Usage:
    $base
EOF

    test $# -eq 0 || exit "$1"
}

main() {
    export GAME1="$HOME/.steam/steam/steamapps/common"
    export GAME2="/mnt/speed/steamapps/common"

    case "$1" in
        outerworlds)
            GAMEDIR="$GAME2/The Outer Worlds"
            cd "$GAMEDIR" || {
                printf '%s\n' "$GAMEDIR not found!"
                exit 1
            }

            WINEDEBUG=-all WINEARCH=win64 \
            WINEPREFIX=~/.wine/prefixes/theouterworlds WINEESYNC=1 \
            DXVK_HUD=fps \
            wine "$GAMEDIR/TheOuterWorlds.exe" > /dev/null 2>&1
            ;;
    esac
}

main "$@"
