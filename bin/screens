#!/bin/sh
#
# screens

main() {
    . fwmrc
    wmgaps

    LAYOUTDIR="$HOME/.screenlayout"
    pkill bars

    case "$1" in
        pri)
            "$LAYOUTDIR/pri.sh"

            for wid in $(lsw); do
                move center "$wid"
            done
            ;;
        landscape)
            case "$(hostname)" in
                "fyriousa")
                    "$LAYOUTDIR/landscape.sh"
                    ;;
            esac
            ;;
        potrait)
            case "$(hostname)" in
                "fyriousa")
                    "$LAYOUTDIR/default.sh"
                    ;;
            esac
            ;;
        *)
            case "$(hostname)" in
                "fyriousa")
                    "$LAYOUTDIR/default.sh"
                    ;;
            esac
            ;;
    esac

    bars &
}

main "$@"
