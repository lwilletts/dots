#!/bin/sh
#
# screens

resetbar() {
    pkill bars
    bars -m
}

main() {
    . fwmrc
    wmgaps

    LAYOUTDIR="$HOME/.screenlayout"

    case "$1" in
        pri)
            "$LAYOUTDIR/pri.sh"

            resetbar
            ;;
        *)
            case "$(hostname)" in
                "fyriousa")
                    "$LAYOUTDIR/default.sh"

                    resetbar
                    ;;
            esac
            ;;
    esac
}

main "$@"
