#!/bin/sh
#
# screens

main() {
    . fwmrc
    wmgaps

    case "$1" in
        default)
            xrandr --output "$SEC" --auto --rotate right --pos 2560x0
            xrandr --output "$PRI" --pos 0x0
            ;;
        *)
            case "$(hostname)" in
                "fyriousa")
                    xrandr --output "$SEC" --auto --rotate right --pos 2560x0
                    xrandr --output "$PRI" --pos 0x480
                    ;;
            esac
            ;;
    esac
}

main "$@"
