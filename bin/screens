#!/bin/sh
#
# screens

case "$1" in
    default)
        xrandr --output HDMI-A-2 --auto --rotate right --pos 2560x0
        xrandr --output DisplayPort-1 --pos 0x0
        exit
        ;;
    light)
        xrandr --output HDMI-A-2 --brightness 1
        xrandr --output DisplayPort-1 --brightness 1
        exit
        ;;
    dark)
        xrandr --output HDMI-A-2 --brightness 0.5
        xrandr --output DisplayPort-1 --brightness 0.5
        exit
        ;;
    hdmi)
        case "$2" in
            on) xrandr --output HDMI-A-2 --brightness 1 ;;
            off) xrandr --output HDMI-A-2 --brightness 0 ;;
        esac
        exit
        ;;
esac

case "$(hostname)" in
    "fyriousa")
        xrandr --output HDMI-A-2 --auto --rotate right --pos 2560x0
        xrandr --output DisplayPort-1 --pos 0x520
        ;;
esac
