#!/bin/sh
#
# transcode

usage() {
    base=$(basename $0)

    cat >&2 << EOF
Usage: $base [file]
EOF

    [ $# -eq 0 ] || exit $1
}

intCheck() {
    printf '%d' "$1" > /dev/null 2>&1
}

encode() {
    ffmpeg -hide_banner -loglevel info -i "$vid.$ext" \
           -max_muxing_queue_size 1024 \
           -sws_flags lanczos -vf "scale=-2:$RES" \
           -c:v libx264 -crf 18 -preset medium \
           -c:a aac -b:a 160k -f mp4 -map 0:0 -map 0:2 "$PWD/$vid.mp4"
}

prep() {
    file="$*"

    vid=${file%.*}
    ext=${file##*.}

    if [ -n "$RES" ]; then
        intCheck "$RES"
    else
        RES=720
    fi

    encode "$@"
}

main() {
    case "$@" in
        -h) usage 0 ;;
        *)  [ -e "$1" ] && prep "$1" ;;
    esac
}

main "$@"
