#!/bin/sh
#
# fanctrl

usage() {
    base=$(basename "$0")

    cat >&2 << EOF
Usage:
    sudo $base
EOF

    [ $# -eq 0 ] || exit "$1"
}

main() {
    i=0
    while :; do
        radeonPCI="/sys/class/drm/card$i/device"
        uevent="$radeonPCI/uevent"

        while :; do
            test -e "$uevent" && break
        done

        driver="$(awk -F '=' '/DRIVER/ {print $2}' "$uevent")"
        [ "$driver" = "amdgpu" ] && break

        i="$((i + 1))"
        [ "$i" -eq 4 ] && i=0
    done

    GPU="$radeonPCI/hwmon/hwmon$i"

    j=2
    while :; do
        MOBO="/sys/devices/platform/nct6775.656/hwmon/hwmon$j"

        [ -e "$MOBO" ] && break

        case "$j" in
            2) j=3 ;;
            3) j=2 ;;
        esac

        sleep 1
    done

    gpu_fan="pwm1"
    cpu_fan="pwm2"
    front_fan="pwm5"
    exhaust_fan="pwm4"

    printf '%s\n' "0" > "$MOBO/$cpu_fan""_enable"
    printf '%s\n' "0" > "$MOBO/$exhaust_fan""_enable"

    printf '%s\n' "0" > "$MOBO/$gpu_fan""_enable"
    printf '%s\n' "0" > "$MOBO/$front_fan""_enable"

    while :; do
        gpu_temp_edge="$(rev "$GPU/temp2_input" | cut -c 4- | rev)"
        cpu_temp="$(sensors | awk '/Core/ {print $3}' | head -n 1 | cut -c 2-3)"

        printf '%s\n' "110" > "$MOBO/$front_fan"

        case "$cpu_temp" in
            8[0-9]|9[0-9]|1[0-9][0-9])
                printf '%s\n' "255" > "$MOBO/$cpu_fan"
                printf '%s\n' "255" > "$MOBO/$exhaust_fan"
                printf '%s\n' "200" > "$MOBO/$front_fan"
                ;;
            6[5-9]|7[0-9])
                printf '%s\n' "160" > "$MOBO/$cpu_fan"
                printf '%s\n' "225" > "$MOBO/$exhaust_fan"
                ;;
            5[0-9]|6[0-4])
                printf '%s\n' "140" > "$MOBO/$cpu_fan"
                printf '%s\n' "160" > "$MOBO/$exhaust_fan"
                ;;
            *)
                printf '%s\n' "100" > "$MOBO/$cpu_fan"
                printf '%s\n' "75" > "$MOBO/$exhaust_fan"
                ;;
        esac

        case "$gpu_temp_edge" in
            # set load rpm
            8[5-9]|9[0-9]|1[0-9][0-9])
                printf '%s\n' "255" > "$MOBO/$gpu_fan"
                printf '%s\n' "130" > "$MOBO/$front_fan"
                ;;
            8[0-4])
                printf '%s\n' "150" > "$MOBO/$gpu_fan"
                printf '%s\n' "125" > "$MOBO/$front_fan"
                ;;
            7[0-9])
                printf '%s\n' "125" > "$MOBO/$gpu_fan"
                printf '%s\n' "125" > "$MOBO/$front_fan"
                ;;
            6[0-9])
                printf '%s\n' "100" > "$MOBO/$gpu_fan"
                ;;
            5[0-9])
                printf '%s\n' "75" > "$MOBO/$gpu_fan"
                ;;
            4[0-9])
                printf '%s\n' "25" > "$MOBO/$gpu_fan"
                ;;
            # set zero rpm
            *)
                printf '%s\n' "0" > "$MOBO/$gpu_fan"
                ;;
        esac

        sleep 2
    done
}

main "$@"
