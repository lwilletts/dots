#!/bin/sh
#
# obs

usage() {
    base=$(basename "$0")

    cat >&2 << EOF
Usage:
    $base
EOF

    [ $# -eq 0 ] || exit "$1"
}

main() {
    VK_ICD_FILENAMES=/usr/share/vulkan/icd.d/amd_pro_icd64.json:/usr/share/vulkan/icd.d/amd_pro_icd64.json OBS_USE_EGL=1 devour /bin/obs
    # /bin/obs --startreplaybuffer "$@"
}

main "$@"
