#!/bin/sh
#
# cbar

f0='[30m'; f1='[31m'; f2='[32m'; f3='[33m'
f4='[34m'; f5='[35m'; f6='[36m'; f7='[37m'
b0='[40m'; b1='[41m'; b2='[42m'; b4='[44m'
b4='[44m'; b5='[45m'; b6='[46m'; b7='[47m'

B='[1m'; R='[0m'; I='[7m'

clrpath="$HOME/$(cat ~/.Xresources | grep "#include \".colours" | cut -d\"  -f 2)"
colour0="#$(grep -w "color0" "$clrpath" | cut -d\# -f 2)"
colour1="#$(grep -w "color1" "$clrpath" | cut -d\# -f 2)"
colour2="#$(grep -w "color2" "$clrpath" | cut -d\# -f 2)"
colour3="#$(grep -w "color3" "$clrpath" | cut -d\# -f 2)"
colour4="#$(grep -w "color4" "$clrpath" | cut -d\# -f 2)"
colour5="#$(grep -w "color5" "$clrpath" | cut -d\# -f 2)"
colour6="#$(grep -w "color6" "$clrpath" | cut -d\# -f 2)"
colour7="#$(grep -w "color7" "$clrpath" | cut -d\# -f 2)"

cat << COLOURS

$colour0 $colour1 $colour2 $colour3 $colour4 $colour5 $colour6 $colour7
$f0â–„â–„â–„â–„â–„â–„â–„ $f1â–„â–„â–„â–„â–„â–„â–„ $f2â–„â–„â–„â–„â–„â–„â–„ $f3â–„â–„â–„â–„â–„â–„â–„ $f4â–„â–„â–„â–„â–„â–„â–„ $f5â–„â–„â–„â–„â–„â–„â–„ $f6â–„â–„â–„â–„â–„â–„â–„ $f7â–„â–„â–„â–„â–„â–„â–„$R
$f0â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ $f1â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ $f2â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ $f3â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ $f4â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ $f5â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ $f6â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ $f7â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ$R

COLOURS
