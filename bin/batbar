#!/bin/sh
#
# batbar

main() {
    if [ $(bat > /dev/null) ]; then
        buf=""
        buf="${buf} $(bat acpi)"

        printf '%s\n' "$buf"
    fi
}

. fwmrc
wmcolours

bar_text_highlight="%{F#$INACTIVE}"
bar_text_foreground="%{F#$ACTIVE}"
bar_back_highlight="%{B#$URGENT}"
bar_back_foreground="%{B#$INACTIVE}"

main "$@"
