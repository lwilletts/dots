#!/bin/sh
#
# bat

manual() {
    BAT="/sys/class/power_supply/cw2015-battery"
    [ -d "$BAT" ] || return 1

    STATUS="$(cat "$BAT/status")"
    PERCENT="$(printf '%s\n' "$(cat "$BAT/capacity")")"
}

manual

case "$STATUS" in
    "Full"|"Charging")
        printf '%s\n' "$PERCENT% /"
        ;;
    "Discharging")
        printf '%s\n' "$PERCENT% _"
        ;;
esac
