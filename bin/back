#!/bin/sh
#
# back

usage() {
    base=$(basename "$0")

    cat >&2 << EOF
Usage:
    $base
EOF

    [ $# -eq 0 ] || exit "$1"
}

main() {
    case "$(hostname)" in
        fyriousa)
            BACK="/home/fyr/usr/subtle/mosaic.png"
            if [ -e "$BACK" ]; then
                hsetroot -root -tile "$BACK" -brightness "0.05"
            else
                hsetroot -root -tile "$HOME/.backup.png" -brightness "-0.8"
            fi
            ;;
    esac
}

main "$@"
