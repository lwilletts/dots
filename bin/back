#!/bin/sh
#
# back

usage() {
    base=$(basename "$0")

    cat >&2 << EOF
Usage:
    $base
EOF

    [ $# -eq 0 ] || exit "$1"
}

main() {
    case "$(hostname)" in
        fyriousa)
            hsetroot -root -tile "/home/fyr/usr/img/patterns/noisy_net.png"
            ;;
        inferno)
            hsetroot -fill "/home/fyr/usr/img/backs/calm.png"
            ;;
    esac
}

main "$@"
