#!/bin/sh
#
# back

usage() {
    base=$(basename "$0")

    cat >&2 << EOF
Usage:
    $base
EOF

    [ $# -eq 0 ] || exit "$1"
}

main() {
    case "$(hostname)" in
        fyriousa)
            BACK="/home/fyr/usr/subtle/45degreee_fabric.png"
            if [ -e "$BACK" ]; then
                hsetroot -root -tile "$BACK" -gamma 0.07
            fi
            ;;
    esac
}

main "$@"
