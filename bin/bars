#!/bin/sh
#
# bars

datebar() {
    while :; do
        clock=$(date '+%a %d %b %H:%M')
        calender="urxvtc -e sh -c '3cal'"

        buf=""
        buf="${buf} %{c}"
        buf="${buf} %{A:${calender}:} ${clock} %{A}"

        printf '%s\n' "$buf"
        sleep 2
    done | lemonbar -d -g ${barw}x${barh}+${barx}+${bary} -B ${bar_bg} \
                    -F ${bar_fg} -R ${bar_border} -r $BW -f ${bar_font} \
                    -n "date" | /bin/sh &
}

sysbar() {
    while :; do
        htop="urxvtc -e sh -c 'htop'"
        mem="$(free -m | awk '/Mem:/ {print $3}')m/$(free -m | awk '/Mem:/ {print $2}')m"

        buf=""
        buf="${buf} %{c}"
        buf="${buf} %{A:${htop}:} 8700k: $(cpu t) / ${mem} %{A}"

        printf '%s\n' "$buf"
        sleep 2
    done | lemonbar -d -g ${barw}x${barh}+${barx}+${bary} -B ${bar_bg} \
                    -F ${bar_fg} -R ${bar_border} -r $BW -f ${bar_font} \
                    -n "sys" | /bin/sh &
}

batbar() {
    while :; do
        buf=""
        buf="${buf} %{c}"
        buf="${buf} $(bat) "

        printf '%s\n' "$buf"
        sleep 2
    done | lemonbar -d -g ${barw}x${barh}+${barx}+${bary} -B ${bar_bg} \
                    -F ${bar_fg} -R ${bar_border} -r $BW -f ${bar_font} \
                    -n "bat" | /bin/sh &
}


gpubar() {
    while :; do
        gotop="urxvtc -e sh -c 'gotop'"

        buf=""
        buf="${buf} %{c}"
        buf="${buf} %{A:${gotop}:} $(gpu) %{A}"

        printf '%s\n' "$buf"
        sleep 2
    done | lemonbar -d -g ${barw}x${barh}+${barx}+${bary} -B ${bar_bg} \
                    -F ${bar_fg} -R ${bar_border} -r $BW -f ${bar_font} \
                    -n "gpu" | /bin/sh &
}

musbar() {
    while :; do
        mpvc -q
        test $? = 2 && {
            mus="quiet time"
        } || {
            mus="$(mpvc -f '%artist% / %title% / %remaining% / %volume%%')"
            test "$mus" = "No files added to /tmp/mpvsocket." &&
                mus="quiet time"
            sleep 0.2
        }

        cava="urxvtc -e sh -c 'cava'"
        pulse="urxvtc -e sh -c 'pulsemixer'"
        vol="$(printf '%s\n' "$(pulsemixer --get-volume | cut -d\  -f 1)%")"

        buf=""
        buf="${buf} %{c}"
        buf="${buf} %{A:${cava}:} ${mus} %{A}"
        buf="${buf} %{r}"
        buf="${buf} %{A:${pulse}:} ${vol} â™ª  %{A}"

        printf '%s\n' "$buf"
        sleep 1
    done | lemonbar -d -g ${barw}x${barh}+${barx}+${bary} -B ${bar_bg} \
                    -F ${bar_fg} -R ${bar_border} -r $BW -f ${bar_font} \
                    -n "music" | /bin/sh &
}

main() {
    . fwmrc
    wmenv
    wmgaps
    wmcolours

    # bar variables
    bar_bg="#$INACTIVE"
    bar_fg="#$ACTIVE"
    bar_border="#808080"
    bar_font=$(awk '/lemon/ {print $3}' < ~/.Xresources | \
               head -n 1 | cut -d',' -f 1)

    # bar geometry
    SX="$(mattr x $PRI)"
    SH="$(mattr h $PRI)"
    barx=$((SX + LGAP))
    bary=$((SH - BGAP + BGAP/4 + 10))
    barw=120
    barh=$((18 + BW*2))

    datebar

    barx=$((barx + barw + LGAP))

    case "$(hostname)" in
        fyriousa)
            barw=280
            gpubar
            ;;
        inferno)
            barw=180
            batbar
            ;;
    esac

    barx=$((barx + barw + LGAP))
    barw=500

    musbar
}

main "$@"
