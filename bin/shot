#!/bin/sh
#
# shot

case "$1" in
    0x*)
        wattr "$1" && wid="$1" || exit 1
        file="$(atomx WM_CLASS "$wid")-$wid-$(date +%s)"
        ;;
    *)
        wid="$(lsw -r)"
        file="$HOME/$(date +%s)"
        ;;
esac

xscreenshot "$wid" | ff2png > "$file.png"

case "$1" in
    pri) convert -crop 2560x1440+0+480 "$file.png" "$file.png" ;;
esac
