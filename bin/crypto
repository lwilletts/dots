#!/bin/sh
#
# crypto

usage() {
    base=$(basename "$0")

    cat >&2 << EOF
Usage:
    $base
EOF

    [ $# -eq 0 ] || exit "$1"
}

enablefan() {
    fanctrl on
}

disablefan() {
    fanctrl off
}

main() {
    enablefan

    ethminer \
    -P stratum1+tcp://0xd4769c6969ba0653eb9da7d5fe28e8c5f9ec1b43@eth-eu1.nanopool.org:9999/fyriousa/laurenceharrywilletts%40gmail.com
}

trap disablefan EXIT

main "$@"
