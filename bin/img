#!/bin/sh
#
# img

validateDeps() {
    hash mpv 2> /dev/null || {
        printf '%s\n' "install mpv numpty"
        exit 1
    }

    W3MCMD="/usr/lib/w3m/w3mimgdisplay"
    test -x $W3MCMD || {
        printf '%s\n' "install w3m numpty"
        exit 1
    }
}

clean() {
    tput cup $LINES 0 && tput ed
    exit
}

img() {
    FILENAME=$1

    WH=$(printf '%s' "5;$FILENAME" | $W3MCMD)
    W=$(printf '%s\n' "$WH" | cut -d\  -f 1)
    H=$(printf '%s\n' "$WH" | cut -d\  -f 2)

    unset -v WH

    FW=5
    FH=10
    LINES=$(($(tput lines) + 2))
    COLUMNS=$(tput cols)

    MW=$((FW * COLUMNS))
    MH=$((FH * (LINES - 2)))

    test $W -gt $MW && {
        H=$((H * MW / W))
        W=$MW
    }

    test $H -gt $MH && {
        W=$((W * MH / H))
        H=$MH
    }

    tput clear
    tput cup $((H/FH)) 0

    printf "0;1;0;0;$W;$H;;;;;$FILENAME\n4;\n3;" | $W3MCMD
}

refresh() {
    img "$file"
    printf '%s' "$(basename "$file") "
}

main() {
    validateDeps

    # single fire if only one image is found
    test $# -gt 1 && {
        for file in "$@"; do
            case "$file" in
                *.mkv|*.mp4|*.gif|*.webm|*.avi)
                    mpv "$file"
                    ;;
                *.tif|*.png|*.jpg|*.jpeg)
                    img "$file"
                    printf '%s' "$(basename "$file") "

                    while true; do
                        oldstty=$(stty -g)
                        stty raw -echo; key="$(head -c 1)"; stty $oldstty
                        case $key in
                            n)
                                break
                                ;;
                            d)
                                printf '%s' "Delete $(basename "$file")? (y,n) "
                                while true; do
                                    oldstty=$(stty -g)
                                    stty raw -echo; key="$(head -c 1)"; stty $oldstty
                                    case $key in
                                        y)
                                            rm "$file"
                                            break
                                            ;;
                                        n)
                                            refresh
                                            ;;
                                    esac
                                done
                                ;;
                            r)
                                ;;
                            R)
                                refresh
                                ;;
                            q)
                                clean
                                ;;
                        esac
                    done
                    ;;
                # move on to the next valid image
                *)
                    continue
                    ;;
            esac
        done
    } || {
        file="$@"
        case "$file" in
            *.mkv|*.mp4|*.gif|*.webm|*.avi)
                mpv "$file"
                ;;
            *.tif|*.png|*.jpg|*.jpeg)
                img "$file"
                ;;
        esac
    }
}

main "$@"
