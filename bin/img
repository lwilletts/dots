#!/bin/sh
#
# img

validateDeps() {
    hash mpv 2> /dev/null || {
        printf '%s\n' "install mpv numpty"
        exit 1
    }

    W3MCMD="/usr/lib/w3m/w3mimgdisplay"
    test -x $W3MCMD || {
        printf '%s\n' "install w3m numpty"
        exit 1
    }
}

img() {
    FILENAME=$1

    WH=$(printf '%s' "5;$FILENAME" | $W3MCMD)
    W=$(printf '%s\n' "$WH" | cut -d\  -f 1)
    H=$(printf '%s\n' "$WH" | cut -d\  -f 2)

    unset -v WH

    FW=5
    FH=10
    LINES=$(tput lines)
    COLUMNS=$(tput cols)

    MW=$((FW * COLUMNS))
    MH=$((FH * (LINES - 3)))

    test $W -gt $MW && {
        H=$((H * MW / W))
        W=$MW
    }

    test $H -gt $MH && {
        W=$((W * MH / H))
        H=$MH
    }

    tput clear
    tput cup $((H/FH)) 0

    printf "0;1;0;0;$W;$H;;;;;$FILENAME\n4;\n3;" | $W3MCMD
    printf '%s\n' ""
}

main() {
    validateDeps

    mpvcmd="mpv --really-quiet --loop-file"

    # single fire if only one image is found
    test $# -gt 1 && {
        for file in "$@"; do
            case "$file" in
                *.mkv|*.mp4|*.gif|*.webm|*.avi)
                    $mpvcmd "$file"
                    ;;
                *.tif|*.png|*.jpg|*.jpeg)
                    img "$file"
                    printf '%s\n' "$(basename "$file") | (n next img, p prev img, r reload img, q quit)"

                    while true; do
                        oldstty=$(stty -g)
                        stty raw -echo; key="$(head -c 1)"; stty $oldstty
                        case $key in
                            n)
                                break
                                ;;
                            r)
                                img "$file"
                                printf '%s\n' "$(basename "$file") | (n next img, p prev img, r reload img, q quit)"
                                ;;
                            q)
                                exit
                                ;;
                        esac
                    done
                    ;;
                *.pdf)
                    zathura "$file"
                    ;;
                # move on to the next valid image
                *)
                    continue
                    ;;
            esac
        done
    } || {
        file="$@"
        case "$file" in
            *.mkv|*.mp4|*.gif|*.webm|*.avi)
                $mpvcmd "$file"
                ;;
            *.tif|*.png|*.jpg|*.jpeg)
                img "$file"
                printf '%s\n' "$(basename "$file")"
                ;;
            *.pdf)
                zathura "$file"
                ;;
        esac
    }
}

main "$@"
