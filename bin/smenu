#!/bin/sh
#
# smenu

main() {
    . fwmrc
    wmcolours

    FONT=$(awk '/font/ {print $3}' < ~/.Xresources | cut -d',' -f 1)

    LINES="$(grep host ~/.ssh/config | wc -l)"

    ADDRESS=$(grep host ~/.ssh/config | cut -d\  -f 2 | sort -ur | \
    dmenu -name "smenu" -f -l $LINES -s 0 -i -fn $FONT -p "SSH >" \
    -nf "#$ACTIVE" -sf "#$URGENT" -nb "#$INACTIVE" -sb "#$INACTIVE" \
    -x -10000 -y -10000 -w 200)

    mosh $ADDRESS
}

main "$@"
