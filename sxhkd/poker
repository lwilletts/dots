# launch programs
{mod1, mod2} + Return
    urxvtc
mod1 + d
    drun

mod1 + {h,j,k,l}
    closer {left, down, up, right}
mod1 + f
    full $(pfw)

# system
mod4 + l
    lock
mod1 + shift + r
    pkill -USR1 -x sxhkd
mod1 + shift + e
    pkill xinit

# mouse
button10
    thunar

# music
mod4 + {h,j,k,l}
    mpvc seek {-5s,-1m,1m,5s} -q
mod4 + {space,p,n,r,z,c}
    mpvc {toggle,prev,next,repeat,shuffle,clear} -q
mod4 + a
    mpvc add ~/media/music -q -Q; mpvc shuffle -q; mpvc next -q
mod4 + {9,0}
    mpvc volume {-5,+5} -q

# volume
XF86AudioMute
    pulsemixer --toggle-mute
{XF86AudioRaiseVolume, XF86AudioLowerVolume}
    pulsemixer --change-volume {2,-2}

# headphones
{XF86AudioPause,XF86AudioPlay,XF86AudioNext}
    mpvc {toggle,toggle,next} -q
XF86AudioPrev
    mpvc add ~/media/music -q -Q; mpvc shuffle -q; mpvc next -q

# shots
Print
    maim $HOME/$(date +%s).png

# vim: set ft=sxhkdrc :
