#!/bin/sh

# x11 environment
xset +dpms                     # powersaving
xset r rate 250 40             # faster keypresses
xset +fp ~/.local/share/fonts  # custom fonts
xsetroot -cursor_name left_ptr # left pointer as cursor

# wall
screens
hsetroot -root -fill "$HOME/usr/img/backs/pluto.tif"

# fwm
bars main &
sxhkd &
watcher &
glazier &

# apps
urxvtd -q -o -f &

case "$(hostname)" in
    spark)
        unclutter-xfixes &
        picom &
        ;;
    fyriousa)
        pulse
        wmp -a 1280 1200
        unclutter &
        picom &
        ;;
esac

test -f ~/.Xresources && xrdb -load ~/.Xresources

xwait
