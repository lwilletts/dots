#!/bin/sh

# x11 environment
xset +dpms                     # powersaving
xset dpms 0 300 0              # timing
xset r rate 250 40             # faster keypresses
xset +fp ~/.local/share/fonts  # custom fonts
xsetroot -cursor_name left_ptr # left pointer as cursor
screens                        # set randr

test -f ~/.Xresources && xrdb -load ~/.Xresources
urxvtd -q -o -f &

case "$(hostname)" in
    spark)
        unclutter-xfixes &
        hsetroot -root -tile \
            "$HOME/usr/img/patterns/light/bgnoise_lg/bgnoise_lg.png" -gamma 0.3
        ;;
    fyriousa)
        unclutter &
        wmp -a 1280 1200
        hsetroot -root -tile \
            "$HOME/usr/img/patterns/light/white-waves/white-waves.png" -gamma 0.15
        ;;
esac

# fwm
cwm &
picom &
sxhkd &
bars main &

pulse
xwait
