#!/bin/sh

screens

# environment
xset s off # no screensaver
xset +dpms # powersaving
xset +fp ~/.local/share/fonts # custom fonts directory
xsetroot -name background
xsetroot -cursor_name left_ptr # left pointer as cursor

# programs
back
bars &
unclutter &
urxvtd -q -o -f &
test -f ~/.Xresources && xrdb -load ~/.Xresources
eventually &
sxhkd &
cwm

while :; do
    sleep 99d
done
