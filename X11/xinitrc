#!/bin/sh

# displays
case "$(hostname)" in
    "fyriousa")
        xrandr --output HDMI-A-2 --auto --rotate right --right-of DisplayPort-1
        xrandr --output DisplayPort-2 --auto --rotate right --pos 3640x200
        xrandr --output DisplayPort-1 --pos 0x440

        hsetroot -tile $HOME/media/img/patterns/noisier_net.png -gamma 1.2
        ;;
    "inferno")
        hsetroot -tile $HOME/media/img/patterns/noisier_net.png -gamma 1.2
esac

# environment
xset s off # no screensaver
xset +dpms # powersaving
xset +fp ~/.local/share/fonts # custom fonts directory
xsetroot -name background
xsetroot -cursor_name left_ptr # left pointer as cursor

# programs
bar &
unclutter &
urxvtd -q -o -f &
test -f ~/.Xresources && xrdb -load ~/.Xresources
eventually &
sxhkd &
cwm

while :; do
    sleep 99d
done
