#!/bin/sh

# x11 environment
xset +dpms                     # powersaving
xset dpms 0 300 0              # timing
xset r rate 250 40             # faster keypresses
xset +fp ~/.local/share/fonts  # custom fonts
xsetroot -cursor_name left_ptr # left pointer as cursor
screens                        # set randr

test -f ~/.Xresources && xrdb -load ~/.Xresources
urxvtd -q -o -f &

case "$(hostname)" in
    spark)
        unclutter-xfixes &
        ;;
    fyriousa)
        unclutter &
        wmp -a 1280 1200
        ;;
esac

# back
hsetroot -root -tile "$HOME/usr/img/patterns/denim.png" -brightness 0.01

watcher &

# fwm
bars &
picom &
sxhkd &

pulse
xwait
