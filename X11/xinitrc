#!/bin/sh

# displays
case "$(hostname)" in
    "fyriousa")
        xrandr --output HDMI-A-0 --auto --rotate right --right-of DisplayPort-0
        xrandr --output DisplayPort-1 --auto --rotate right --right-of HDMI-A-0
        xrandr --output DisplayPort-0 --pos 0x190

        hsetroot -tile $HOME/media/img/patterns/noisier_net.png -gamma 1.3
        ;;
    "inferno")
        hsetroot -tile $HOME/media/img/patterns/noisier_net.png -gamma 1.3
esac

# environment
xset s off # no screensaver
xset +dpms # powersaving
xset +fp ~/.local/share/fonts # custom fonts directory
xsetroot -name background
xsetroot -cursor_name left_ptr # left pointer as cursor

# programs
bar &
unclutter &
urxvtd -q -o -f &
test -f ~/.Xresources && xrdb -load ~/.Xresources
event &
sxhkd &
cwm

while :; do
    sleep 99d
done
