#!/bin/sh

# x11 environment
xset +dpms                                        # powersaving
xset b 50                                         # bell volume
xset s off -dpms                                  # screen blanking
xset r rate 250 40                                # faster keypresses
xset +fp ~/.local/share/fonts                     # custom fonts
xsetroot -cursor_name left_ptr                    # left pointer as cursor
xkbcomp "$HOME"/.dots/X11/FNkeymap.xkb "$DISPLAY" # keymap for romac
screens                                           # set randr

[ -f ~/.Xresources ] && xrdb -load ~/.Xresources
pgrep urxvtd 2> /dev/null || urxvtd -q -o -f &

# temp workaround
nullsinks

# wm
back
ewmh &
sxhkd &
watcher &
envreact &

case "$(hostname)" in
    "fyriousa")
        wmp -a 2360 1008
        vibrant-cli "$(lsm -p)" 1.3
        vibrant-cli HDMI-A-0 1.3
        autotile vert HDMI-A-0 &
        unclutter &
        ;;
esac

sleep 0.3
xwait
