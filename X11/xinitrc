#!/bin/sh

# x11 environment
xset +dpms                     # powersaving
xset r rate 250 40             # faster keypresses
xset +fp ~/.local/share/fonts  # custom fonts
xsetroot -cursor_name left_ptr # left pointer as cursor
screens                        # set randr

test -f ~/.Xresources && xrdb -load ~/.Xresources
urxvtd -q -o -f &

case "$(hostname)" in
    spark)
        unclutter-xfixes &
        hsetroot -root -cover "$HOME/tmp/prescott-horn-tEJocaFubhc-unsplash.jpg"
        ;;
    fyriousa)
        unclutter &
        wmp -a 1280 1200
        hsetroot -root -fill "$HOME/usr/img/backs/clouds.jpg"
        ;;
esac

# fwm
picom &
sxhkd &
watcher &
glazier &
bars main &

pulse
xwait
