#!/bin/sh

# x11 environment
xset +dpms # powersaving
xset s off # no screensaver
xset r rate 250 40 # better responsiveness
xset +fp ~/.local/share/fonts # custom fonts directory
xsetroot -cursor_name left_ptr # left pointer as cursor
xsetroot -name background

# wall
screens
hsetroot -solid "#DBDFE4"

# fwm
cwm &
bars &
sxhkd &
compton &
watcher &
audiosinks
unclutter &
urxvtd -q -o -f &
test -f ~/.Xresources && xrdb -load ~/.Xresources

PRI="$(lsm -p)"
wmp "$(($(mattr x "$PRI") + $(mattr w "$PRI") / 2))" \
    "$(($(mattr y "$PRI") + $(mattr h "$PRI") / 2))"

while :; do
    sleep 99d
done
