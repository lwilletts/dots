#!/bin/sh

# x11 environment
xset +dpms                     # powersaving
xset r rate 250 40             # faster keypresses
xset +fp ~/.local/share/fonts  # custom fonts
xsetroot -cursor_name left_ptr # left pointer as cursor

test -f ~/.Xresources && xrdb -load ~/.Xresources

# wall
screens
hsetroot -root -fill "$HOME/usr/img/backs/rockarmor.jpg"

# apps
urxvtd -q -o -f &

case "$(hostname)" in
    spark)
        unclutter-xfixes &
        ;;
    fyriousa)
        wmp -a 1280 1200
        unclutter &
        ;;
esac

# fwm
picom &
sxhkd &
watcher &
glazier &
bars main &

pulse
xwait
